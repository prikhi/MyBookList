    book BookId
    library LibraryId
    rating Double Maybe
    inProgress Bool
    hasFinished Bool
    completionCount Int
    addedOn Day
    firstFinishedOn Day Maybe
    lastFinishedOn Day Maybe
    UniqueLibraryBook library book

Wishlist
    name Text
    user UserId
    UniqueWishlist name user
    deriving Show

WishlistItem
